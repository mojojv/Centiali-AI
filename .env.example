# =====================================
# CENTRALLY - Environment Variables
# Plataforma de Analítica de Transporte Urbano
# =====================================
# IMPORTANTE: NO subir este archivo con valores reales a Git
# Este es un template. Copia a .env y completa los valores

# ----------------------------------
# Application Settings
# ----------------------------------
APP_NAME=Centrally
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# ----------------------------------
# Database - PostgreSQL
# ----------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=centrally_db
POSTGRES_USER=centrally_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_SCHEMA=public

# Connection string
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# PostGIS extension
ENABLE_POSTGIS=true

# ----------------------------------
# Database - DuckDB (Local)
# ----------------------------------
DUCKDB_PATH=./data_storage/duckdb_data/centrally.duckdb

# ----------------------------------
# Dash Dashboard
# ----------------------------------
DASH_HOST=0.0.0.0
DASH_PORT=8050
DASH_DEBUG=True
DASH_SECRET_KEY=change_me_to_random_secret_key

# ----------------------------------
# FastAPI Backend
# ----------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# JWT Authentication
JWT_SECRET_KEY=change_me_to_strong_random_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ----------------------------------
# OpenAI / Azure OpenAI
# ----------------------------------
# Para funcionalidad LLM/RAG
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Azure OpenAI (alternativa)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your_azure_key_here
# AZURE_OPENAI_DEPLOYMENT=your_deployment_name

# ----------------------------------
# Vector Store (FAISS / ChromaDB)
# ----------------------------------
VECTOR_STORE_TYPE=faiss  # faiss, chromadb
VECTOR_STORE_PATH=./llm/vector_stores/
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ----------------------------------
# MLflow
# ----------------------------------
MLFLOW_TRACKING_URI=./mlruns
MLFLOW_EXPERIMENT_NAME=centrally_models

# ----------------------------------
# Data Sources - APIs Abiertas
# ----------------------------------
# Datos abiertos de Medellín
MEDELLIN_OPEN_DATA_API=https://www.datos.gov.co/api/
MEDELLIN_API_KEY=your_api_key_if_required

# ----------------------------------
# Airflow / Prefect (Orquestación)
# ----------------------------------
AIRFLOW_HOME=./airflow
AIRFLOW_WEBSERVER_PORT=8080

# ----------------------------------
# Monitoring
# ----------------------------------
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# ----------------------------------
# Storage (Cloud - Opcional)
# ----------------------------------
# AWS S3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=centrally-data

# Azure Blob Storage
# AZURE_STORAGE_CONNECTION_STRING=your_connection_string
# AZURE_CONTAINER_NAME=centrally-data

# ----------------------------------
# Development Tools
# ----------------------------------
ENABLE_PROFILING=False
ENABLE_DEBUG_TOOLBAR=False
